<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.nick_sib.beauty_radar.ui.authScreen.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_authentication">
        <action
            android:id="@+id/action_authFragment_to_enterCodeFragment"
            app:destination="@id/enterCodeFragment"/>
    </fragment>
    <fragment
        android:id="@+id/enterCodeFragment"
        android:name="com.nick_sib.beauty_radar.ui.enter_code.EnterCodeFragment"
        android:label="fragment_enter_code"
        tools:layout="@layout/fragment_enter_code" >
        <argument
            android:name="phone"
            app:argType="string"
            android:defaultValue="err" />
        <action
            android:id="@+id/action_enterCodeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_enterCodeFragment_to_logoutFragment"
            app:destination="@id/logoutFragment"
            app:popUpTo="@id/enterCodeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.nick_sib.beauty_radar.ui.profileScreen.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/logoutFragment"
        android:name="com.nick_sib.beauty_radar.ui.logout.LogoutFragment"
        android:label="fragment_logout"
        tools:layout="@layout/fragment_logout" />
</navigation>