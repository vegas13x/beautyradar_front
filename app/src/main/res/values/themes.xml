<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Beautyradar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_dusty_rose_mid</item>
        <item name="colorPrimaryVariant">@color/main_dusty_rose_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_dark</item>
        <item name="colorSecondaryVariant">@color/main_dark_20</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Beautyradar.Second" parent="Theme.Beautyradar">
        <item name="colorPrimary"> #FD8A8D </item>
    </style>

    <style name="Theme.Beautyradar.Third" parent="Theme.Beautyradar">
        <item name="colorPrimary"> @color/violet </item>
    </style>

    <style name="Theme.Beautyradar.Four" parent="Theme.Beautyradar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="BaseFont">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/main_dark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextWelcome" parent="BaseFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/biggest_text</item>
        <item name ="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextFragmentTitle" parent="BaseFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name ="android:lineSpacingExtra">14sp</item>
    </style>

    <style name="TextFragmentLabel" parent="BaseFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_text</item>
        <item name ="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="TextFragmentGotoSingIn" parent="BaseFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name ="android:lineSpacingExtra">4sp</item>
    </style>



    <style name="TextAgreement" parent="BaseFont">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name ="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextConfirmation" parent="TextWelcome">
        <item name="android:layout_marginTop">@dimen/big_offset</item>
        <item name="android:textSize">@dimen/confirmation_text</item>
        <item name ="android:letterSpacing">-0.03</item>
    </style>

    <style name="TextCodeHelp">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cardo</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>
    <style name="TextWarning">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="ButtonBase">
        <item name="android:background">@drawable/rounded_corners_for_button_cont</item>
        <item name="android:textSize">@dimen/text_size_btn_welcome_screen</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/edge_offset_of_button</item>
        <item name="android:layout_marginEnd">@dimen/edge_offset_of_button</item>
    </style>

    <style name="ButtonSingUp" parent="ButtonBase">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_dark</item>
    </style>

    <style name="ButtonBlack" parent="ButtonBase">
        <item name="android:background">@drawable/button_black_rounded_corners</item>
        <item name="android:textColor">@drawable/button_black_text</item>
    </style>

    <style name="TextInputLayoutBG" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">10dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">24dp</item>
        <item name="contentPaddingRight">24dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="borderWidth">10dp</item>
    </style>

    <style name="Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BaseTextMainScreen">
        <item name="android:textColor">@color/main_dark</item>
    </style>

    <style name="NameMasterMainScreen" parent="BaseTextMainScreen">
        <item name="android:textSize">@dimen/size_text_name_master_main</item>
    </style>
    <style name="DateMainScreen" parent="BaseTextMainScreen">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>
    <style name="CustomerPerformance" parent="BaseTextMainScreen">
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>
    <style name="CustomerPerformance.Counter">
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>
    <style name="ButtonMainScreen" parent="BaseTextMainScreen">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="CardTextViewMainScreen" parent="BaseTextMainScreen">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="ChipCalendarFragment" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_btn_gap_day</item>
        <item name="rippleColor">@color/bg_btn_gap_day</item>
        <item name="android:textColor">@color/main_dark</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipSurfaceColor">@color/transparent</item>
    </style>

    <style name="EditPhone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/main_dark</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>
</resources>