<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Beautyradar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/violet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Beautyradar.Second" parent="Theme.Beautyradar">
        <item name="colorPrimary"> #FD8A8D </item>
    </style>

    <style name="Theme.Beautyradar.Third" parent="Theme.Beautyradar">
        <item name="colorPrimary"> @color/violet </item>
    </style>

    <style name="TextWelcome">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/biggest_text</item>
    </style>
    
    <style name="TextConfirmation" parent="TextWelcome">
        <item name="android:textSize">@dimen/confirmation_text</item>
        <item name ="android:letterSpacing">-0.03</item>
    </style>

    <style name="TextCodeHelp">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cardo</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="TextWarning">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>
    <style name="ButtonLogin">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/rounded_corners_for_button_cont</item>
        <item name="android:fontFamily">@font/cardo104s</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="TextInputLayoutBG" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <style name="Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>