<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_recorded_client_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="17dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="17dp"
    android:layout_marginBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_recorded_const_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_recorded_tv_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            android:text="Александра"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/item_recorded_tv_date"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_recorded_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_recorded_tv_client_name"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="12dp"
            android:text="17 марта 2021"
            android:textColor="@color/Black"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/item_recorded_tv_client_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/item_recorded_tv_procedure_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_recorded_tv_client_name"
            android:layout_marginTop="10dp"
            android:text="15:00 - 16:00"
            android:textColor="@color/Black"
            android:textSize="17sp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_recorded_tv_date"
            app:layout_constraintTop_toBottomOf="@+id/item_recorded_tv_date" />


        <TextView
            android:id="@+id/item_recorded_tv_service_price_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:text="@string/text_test_recorded_client"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_recorded_tv_procedure_time"
            app:layout_constraintStart_toStartOf="@+id/item_recorded_tv_client_name"
            app:layout_constraintTop_toBottomOf="@+id/item_recorded_tv_client_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
