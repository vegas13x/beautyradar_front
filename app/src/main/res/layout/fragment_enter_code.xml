            android:layout_marginHorizontal="@dimen/offset52"
            android:layout_marginTop="@dimen/big_offset"
            android:text="@string/text_help_info_phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_code_fragment_tv_confirmation" />

