            android:id="@+id/enter_code_fragment_ll_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_24"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_code_fragment_tv_info">

            <View
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:layout_margin="@dimen/dot_margin"
                android:background="@drawable/ic_circle_black" />

            <View
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:layout_margin="@dimen/dot_margin"
                android:background="@drawable/ic_circle_black" />

            <View
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:layout_margin="@dimen/dot_margin"
                android:background="@drawable/ic_circle_black" />

            <View
                android:layout_width="@dimen/dot_size"
                android:layout_height="@dimen/dot_size"
                android:layout_margin="@dimen/dot_margin"
