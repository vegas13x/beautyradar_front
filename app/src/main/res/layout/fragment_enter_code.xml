<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.enter_code.EnterCodeFragment">

    <TextView
        android:id="@+id/enter_code_fragment_tv_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ПОДТВЕРЖДЕНИЕ"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/enter_code_fragment_et_entry_field_code"
        app:layout_constraintEnd_toEndOf="@+id/enter_code_fragment_et_entry_field_code"
        app:layout_constraintStart_toStartOf="@+id/enter_code_fragment_et_entry_field_code"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enter_code_fragment_et_entry_field_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="50dp"
        android:inputType="textPassword"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/enter_code_fragment_btn_go"
        android:layout_width="0dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="продолжить"
        app:layout_constraintEnd_toEndOf="@+id/enter_code_fragment_et_entry_field_code"
        app:layout_constraintStart_toStartOf="@+id/enter_code_fragment_et_entry_field_code"
        app:layout_constraintTop_toBottomOf="@+id/enter_code_fragment_et_entry_field_code" />

</androidx.constraintlayout.widget.ConstraintLayout>