        <include
            android:id="@+id/fragment_auth_loading_dialog"
            layout="@layout/dialog_loading"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/enter_code_fragment_iv_back_to"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_offset"
            android:src="@drawable/ic_arrow_left"
            android:background="@drawable/bg_transparent_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/enter_code_fragment_tv_confirmation"
            style="@style/TextConfirmation"
            android:layout_marginTop="@dimen/offset80"
            android:text="@string/the_confirmation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/enter_code_fragment_tv_info"
