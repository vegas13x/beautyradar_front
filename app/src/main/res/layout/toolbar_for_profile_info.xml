<?xml version="1.0" encoding="UTF-8"?>
<com.google.android.material.appbar.CollapsingToolbarLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collapsing_toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:contentScrim="@color/pink_inga"
    app:expandedTitleMarginEnd="64dp"
    app:expandedTitleMarginStart="48dp"
    app:layout_scrollFlags="scroll|exitUntilCollapsed"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <ImageView-->
<!--        android:src="#E5D0D8"-->
<!--        app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="match_parent"-->
<!--        android:scaleType="centerCrop"-->
<!--        app:layout_collapseMode="parallax"-->
<!--        android:minHeight="85dp"/>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_collapseMode="parallax"
        app:layout_scrollFlags="scroll|enterAlways"
        android:src="#E5D0D8"
        android:background="@color/white">

        <ImageView
            android:id="@+id/top_pink"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/pink_inga"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/rounded_corners2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="49dp"
            android:src="@drawable/back3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="22.5dp"
            app:cardCornerRadius="62.5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ellipse" />


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>





    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:contentDescription="books"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
        android:gravity="center|center_horizontal"
        android:layout_width="match_parent"
        app:titleTextColor="#35384D"
        android:layout_height="50dp"
        app:layout_scrollFlags="scroll|enterAlways" />



</com.google.android.material.appbar.CollapsingToolbarLayout>