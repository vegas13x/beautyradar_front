<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background">

    <ImageView
        android:id="@+id/splash_iv_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="56dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@id/splash_iv_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/d_iv_logo"/>

    <ImageView
        android:id="@+id/splash_iv_progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="142dp"
        android:src="@drawable/splash_rotate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_iv_logo"
        android:contentDescription="@string/d_iv_progress"/>

</androidx.constraintlayout.widget.ConstraintLayout>