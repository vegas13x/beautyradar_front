<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.nick_sib.beauty_radar.view_model.WelcomeViewModel" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    bind:context=".view.fragments.WelcomeFragment">

    <TextView
        android:id="@+id/fragment_wc_tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/s_welcome"
        android:textColor="#486C93"
        android:textSize="31sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragment_wc_im_logo"
        android:layout_width="327dp"
        android:layout_height="243dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_wc_tv_welcome"
        app:srcCompat="@drawable/group_456" />

    <Button
        android:id="@+id/fragment_wc_btn_enter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/rounded_corners_for_button_cont"
        android:text="@string/enter"
        android:textColor="#2F4964"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_wc_im_logo" />

    <Button
        android:id="@+id/fragment_wc_btn_reg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="@dimen/big_offset"
        android:layout_marginEnd="57dp"
        android:background="@drawable/rounded_corners_for_button_cont"
        android:backgroundTint="@android:color/white"
        android:text="@string/registr"
        android:textColor="#2F4964"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_wc_btn_enter" />

    <TextView
        android:id="@+id/fragment_wc_tv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_warning"
        android:textAlignment="center"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_wc_btn_reg" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>