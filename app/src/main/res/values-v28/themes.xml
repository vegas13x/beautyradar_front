<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseFont">>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/main_dark</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextWelcome" parent="BaseFont">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/biggest_text</item>
        <item name="android:lineHeight">@dimen/biggest_text_height</item>
    </style>

    <style name="TextFragmentTitle" parent="BaseFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name ="android:lineHeight">@dimen/title_text_height</item>
    </style>

    <style name="TextFragmentLabel" parent="BaseFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_text</item>
        <item name="android:textFontWeight">400</item>
        <item name ="android:lineHeight">@dimen/label_text_height</item>
    </style>

    <style name="TextFragmentGotoSingIn" parent="BaseFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textFontWeight">400</item>
        <item name ="android:lineHeight">@dimen/text_size_18</item>
    </style>

    <style name="TextDigitPin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_item_pin</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:hint">0</item>
        <item name="android:textColorHint">@drawable/selector_hint</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_margin">@dimen/half_pin_offset</item>
        <item name="android:textSize">@dimen/biggest_text_more</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:lineHeight">49sp</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:paddingHorizontal">11dp</item>
        <item name="android:paddingVertical">3dp</item>
    </style>

    <style name="TextAgreement" parent="BaseFont">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">@dimen/small_text_height</item>
    </style>


    <style name="TextConfirmation" parent="TextWelcome">
        <item name="android:textSize">@dimen/confirmation_text</item>
        <item name ="android:letterSpacing">-0.03</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">39sp</item>
    </style>
    <style name="TextCodeHelp">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cardo</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:lineHeight">19.6sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextWarning">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">18.96sp</item>
    </style>

    <style name="ButtonSingUp" parent="ButtonBase">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_dark</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ButtonBlack" parent="ButtonBase">
        <item name="android:background">@drawable/button_black_rounded_corners</item>
        <item name="android:textColor">@drawable/button_black_text</item>
    </style>

    <style name="EditPhone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/main_dark</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>
</resources>